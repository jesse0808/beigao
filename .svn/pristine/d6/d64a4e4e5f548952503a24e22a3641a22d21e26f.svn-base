<template>
    <!-- 每日签到 -->
    <div class="preM_every_signbox">
        <img :src="url" class="preM_sign_banner"/>
        <!-- 主要内容 -->
        <div class="preM_sign_maincontent">
            
            <!-- 内容按钮 -->
            <div class="preM_content_centetbox">
                <p>首充金额<span>{{regInfo.FirstRechargeMoney}}</span>元, 可领取<span>{{regInfo.CashGift}}</span>元</p>
                <diV class="preM_content_btnbox box_h">
                    <!-- 未签到添加类名 has_not_sign -->
                    <template v-if="regInfo.bl">
                        <el-button size="medium" type="success" @click="getGift">领取</el-button>
                    </template>
                    <template v-else>
                        <el-button size="medium" type="success" plain disabled >不可领取</el-button>
                    </template>
                </diV>
            </div>
            <!-- 通用规则模块  -->
            <div class="prefec_allac_rulesbox">
                <img src="../../assets/img/sign/active_rules.png" class="allac_rules_title"/>
                
                <div v-html="acObj.Description"></div>
            </div>
        </div>
        <div class="success_alter">
            <el-button :plain="true" @click="openSuccess"></el-button>
            <el-button :plain="true" @click="openMessAge"></el-button>
        </div>
    </div>
    
</template>

<script>
import {postAjax,getAjax} from "../../util/ajax.js";
import {SysKey} from "../../util/sysconfig";
export default {
    data(){
        return{
            url:SysKey("ImgServerUrl").SysValue, //图片地址
            ids:2,  //活动ID
            acObj:{}, // 活动内容
            regInfo:{},//首充信息
        }
    },
    methods:{
        // 获取活动列表
        getActive(){
            let that =this
            let url ="api/Activity/GetActList"
            postAjax(url)
            .then(function(data){
                if(data.IsSucess==true){
                    data.Data.forEach(item => {
                        if(item.AcType == that.ids){
                            that.acObj=item
                            that.url = that.url + that.acObj.ImgUrl
                            
                        }
                    });
                }
            })
        },
        // 获取首充信息
        getRegInfo(){
            let that = this
            let url = "api/Activity/GetFirstRechargeInfo"
            postAjax(url)
            .then(function(data){
                that.regInfo = data.Data
            })
            
        },
        //成功提示
        openSuccess(data){
            let that = this
            this.$message({
                message: data,
                type: 'success',
                duration:2000,
                onClose:function(){
                    that.getRegInfo()
                }
            });
        },
        // 失败提示
        openMessAge(data){
            this.$message.error(data);
        },
        // 领取
        getGift(){
            let that = this
            let url ="api/Activity/GetFirstRechargeGift"
            postAjax(url)
            .then(function(data){
                if(data.IsSucess==true){
                    that.openSuccess(data.Message)
                }
                else{
                    that.openMessAge(data.Message)
                }
            })
        }
    },
    created(){
        this.getActive()
        this.getRegInfo()
    }
}
</script>

