<template>
  <div id="jfmx"
       v-loading="loading"
       element-loading-text="加载中"
       element-loading-spinner="el-icon-loading"
  >
    <div class="jfmx_main">
      <div class="query_info">
        <!-- 选择账单类别 -->
        <el-select v-model="currBillTypes" placeholder="请选择积分类型">
          <el-option
