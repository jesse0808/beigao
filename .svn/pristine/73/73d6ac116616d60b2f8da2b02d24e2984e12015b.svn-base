            </div>
            <div v-if="success">
                <img src="../../assets/img/icon/window/success.png" alt=""/>
                <p>投注成功</p>
                <div class="bet_frame_sure" @click="hide">确定</div>
                <span class="bet_frame_text">{{time}}秒后自动关闭</span>
            </div>
            <div v-else class="bet_frame_fail">
                <span class="iconfont icon-fail"></span>
                <span>账户余额不足</span>
                <div class="bet_frame_sure" @click="hide">关闭</div>
            </div>
        </div>
    </div>
</template>

<script>
    export default {
        data() {
            return {
              success: true,
              time: 3
            }
        },
        created(){
            this.timer();
        },
        methods: {
            hide() {
              this.$emit("bethide");
              clearInterval(this.timer);
            },

            timer(){
                setInterval(()=>{
                    this.time=this.time-1;
                },1000);
            }
        },
    }
</script>

