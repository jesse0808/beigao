<script>
    export default {
        props: {
            cz: {
                type: String
            },
            qh: {
                type: String | Number
            },
            money: {
                type: String | Number
            },
            shTextArr: {
                type: Array,
                default: []
            },
            confirm: {
                type: Function,
                default: null,
            },
            cancel: {
                type: Function,
                default: null,
            },
            allNum: {
              type: Number,
              required:true
            }
        },
        watch:{
            'shTextArr'(val){
            }
        },
        data() {
            return {
                showDialog: false,
            }
        },

        methods: {
            show() {
                this.showDialog = true
            },
            hide() {
                this.showDialog = false
            },
            _Confirm() {
                if (this.money > this.$store.state.userInfo.Balance) {
                    this.$message.error('您的可用余额不足，请重新选择');
                } else if (this.confirm) this.confirm();
                this.hide();
            },
            _Cancel() {
                if (this.cancel) this.cancel();
                this.hide();
            }

        },

    }
</script>
